masters ips {
	192.168.0.1;
	192.168.0.2;
	192.168.0.3;
	192.168.0.4;
	192.168.0.5;
	192.168.0.6;
	192.168.0.7;
	192.168.0.8;
	192.168.0.9;
	192.168.0.10;
	192.168.0.11;
	192.168.0.12;
	192.168.0.13;
};

zone "manijapones.com" {
	type master;
	file "/etc/bind/db.manijapones";	
};

zone "pachangamix.com" {
	type slave;
	file "/var/lib/bind/db.pachangamix.com";
	masters { ips; };

}; 

zone "0.168.192.in-addr.arpa" {
	type master;
	file "/etc/bind/db.192";
};
